#!/bin/zsh

# OpenVPN shortcut
vpn () {
	systemctl $1 openvpn-client@$2.service
}

# Send push notification to phone with pushover.net
push-notify () {
	if [ -z "$1" ]; then
		1="Push notification"
	fi
	curl -X POST https://api.pushover.net/1/messages.json \
		-d "token=$PUSHOVER_API_TOKEN" \
		-d "user=$PUSHOVER_USER_KEY" \
		-d "message=$1"
}
