#!/bin/bash

# Move to home folder and clear terminal
alias home='cd ~ && clear'

# Shorten ./gradlew bootrun
alias gbr='gradle bootrun'

# i can't spell lol
alias clera='clear'
alias cleara='clear'
alias cler='clear'
alias claer='clear'
alias clar='clear'

# Frequently used commands
alias c='clear'
alias e='exit'

# yeet
alias yeet='sudo pacman -Rns'

# CD rip with push notifications
alias rip='cd $HOME/downloads && whipper cd rip && push-notify "Rip complete" || push-notify "Rip failed"'

# iPod sync commands
alias sync_ipod_dry='rsync -autnv --modify-window=1 --delete --exclude .rockbox --exclude iPod_Control $HOME/music/ /run/media/aaron/iPod/'
alias sync_ipod='rsync -autP --modify-window=1 --delete --exclude .rockbox --exclude iPod_Control $HOME/music/ /run/media/aaron/iPod/'
