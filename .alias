#!/bin/zsh

# Move to home folder and clear terminal
alias home='cd ~ && clear'

# Shorten ./gradlew bootrun
command -v gradle &> /dev/null && alias gbr='gradle bootrun'

# i can't spell lol
alias clera='clear'
alias cleara='clear'
alias cler='clear'
alias claer='clear'
alias clar='clear'

# Frequently used commands
alias c='clear'
alias e='exit 0'

# yeet
alias yeet='sudo pacman -Rns'

# CD rip with push notifications
command -v whipper &> /dev/null && alias rip='cd $HOME/downloads && whipper cd rip && push-notify "Rip complete" || push-notify "Rip failed"'

# iPod sync commands
command -v rsync &> /dev/null && {
	alias ipod_sync_dry='rsync -autnv --modify-window=1 --delete --exclude .rockbox --exclude iPod_Control $HOME/music/ /run/media/aaron/iPod/'
	alias ipod_sync='rsync -autP --modify-window=1 --delete --exclude .rockbox --exclude iPod_Control $HOME/music/ /run/media/aaron/iPod/'
}

# Systemctl shortcuts
alias sc='systemctl'
alias scu='systemctl --user'

# Experimental - preserve environment and aliases when sudoing
alias sudo='sudo -E '

# Always download in FLAC to ~/downloads with deemix
command -v deemix &> /dev/null && alias deemix='deemix -p $HOME/downloads -b FLAC'
