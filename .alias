# Move to home folder and clear terminal
alias home='cd ~ && clear'

# SSH into media server w/ tunnel for Plex web client
alias server='ssh user@192.168.86.186'

# Shorten git
alias g='git'

# Connect to and daemonize VPN (for Tesla) - requires OpenVPN
alias teslavpn='sudo openvpn --config /etc/openvpn/client/tesla.ovpn --daemon'

# Connect to and daemonize NordVPN P2P VPN - requires OpenVPN
alias nordvpn='sudo openvpn --config /etc/openvpn/client/nord.ovpn --daemon'

# Shorten ./gradlew bootrun
alias gbr='./gradlew bootrun'

# Shorten xdg-open
alias open='xdg-open'
